{
    "name": "dehaze_vspga",
    "phase": "train", // train or val
    "gpu_ids": [
        2, 1, 3, 4
    ],
    "path": { //set the path
        "log": "logs",
        "tb_logger": "tb_logger",
        "results": "results",
        "checkpoint": "checkpoint",
        "resume_state": null
//         "resume_state": "" //pretrain model or training state
    },
    "datasets": {
        "train": {
            "name": "dehaze",
            "mode": "HR", // whether need LR img
            "dataroot": "/data/ImageDehazing/RESIDE1019/hdf5",
            "datatype": "h5", //lmdb or img, path of img files
            "l_resolution": 256, // low resolution need to super_resolution
            "r_resolution": 256, // high resolution
            "batch_size": 4,
            "num_workers": 8,
            "use_shuffle": true,
            "data_len": -1 // -1 represents all data used in train
        },
        "val": {
            "name": "dehaze_val",
            "mode": "LRHR",
            "dataroot": "/data/ImageDehazing/RESIDE1019/SOTS",
            "datatype": "haze_img", //lmdb or img, path of img files
            "l_resolution": 256,
            "r_resolution": 256,
            "data_len": 50
        }
    },
    "model": {
        "which_model_G": "dehazy", // use the ddpm or sr3 network structure
        "finetune_norm": false,
        "unet": {
            "in_channel": 3,
            "out_channel": 3,
            "inner_channel": 64,
            "norm_groups": 16,
            "channel_multiplier": [
                1,
                2,
                4,
                8,
                // 8,
                // 16,
                16
            ],
            "attn_res": [
                // 16
            ],
            "res_blocks": 1,
            "dropout": 0.2
        },
        "beta_schedule": { // use munual beta_schedule for acceleration
            "train": {
                "schedule": "linear",
                "n_timestep": 1000,
                "linear_start": 1e-4,
                "linear_end": 1e-2
            },
            "val": {
                "schedule": "linear",
                "n_timestep": 1000,
                "linear_start": 1e-4,
                "linear_end": 1e-2
            }
        },
        "diffusion": {
            "image_size": 256,
            "channels": 3, //sample channel
            "conditional": true // unconditional generation or unconditional generation(super_resolution)
        }
    },
    "train": {
        "n_iter": 1000000,
        "val_freq": 1e2,
        "save_checkpoint_freq": 1e4,
        "print_freq": 50,
        "optimizer": {
            "type": "adam",
            "lr": 1e-9
        },
        "ema_scheduler": { // not used now
            "step_start_ema": 5000,
            "update_ema_every": 1,
            "ema_decay": 0.9999
        }
    },
    "wandb": {
        "project": "dehaze_vspga"
    }
}